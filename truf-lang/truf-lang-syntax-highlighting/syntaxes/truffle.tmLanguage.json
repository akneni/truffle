{
  "scopeName": "source.truffle",
  "patterns": [
    {
      "name": "keyword.control.truffle",
      "match": "\\b(fn|main|while|for|return)\\b"
    },
    {
      "name": "keyword.type.truffle",
      "match": "\\b(int|String|Vec|bool)\\b"
    },
    {
      "name": "constant.numeric.truffle",
      "match": "\\b\\d+\\.?\\d*\\b"
    },
    {
      "name": "string.quoted.double.truffle",
      "match": "\".*?\""
    },
    {
      "name": "variable.truffle",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "function.call.truffle",
      "match": "\\bprint\\b(?=\\()"
    },
    {
      "name": "comment.line.double-slash.truffle",
      "begin": "//",
      "end": "$"
    }
  ],
  "repository": {}
}
